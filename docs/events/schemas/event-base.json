{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://freeflow.local/schemas/event-base.json",
  "title": "FreeFlow Event Envelope",
  "type": "object",
  "required": [
    "eventId",
    "type",
    "version",
    "occurredAt",
    "correlationId",
    "idempotencyKey",
    "source",
    "data"
  ],
  "properties": {
    "eventId": {
      "type": "string",
      "format": "uuid"
    },
    "type": {
      "type": "string"
    },
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "occurredAt": {
      "type": "string",
      "format": "date-time"
    },
    "correlationId": {
      "type": "string",
      "format": "uuid"
    },
    "idempotencyKey": {
      "type": "string",
      "minLength": 1
    },
    "source": {
      "type": "string",
      "minLength": 1
    },
    "subject": {
      "type": "object",
      "required": ["type", "id"],
      "properties": {
        "type": { "type": "string" },
        "id": { "type": "string" }
      },
      "additionalProperties": false
    },
    "actor": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "type": { "type": "string", "enum": ["user", "system"] },
        "email": { "type": "string", "format": "email" }
      },
      "additionalProperties": false
    },
    "data": {
      "type": "object"
    }
  },
  "additionalProperties": false
}
