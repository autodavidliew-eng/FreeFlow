{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://freeflow.local/schemas/alarm.acknowledged.v1.json",
  "title": "alarm.acknowledged",
  "allOf": [
    { "$ref": "event-base.json" },
    {
      "type": "object",
      "properties": {
        "type": { "const": "alarm.acknowledged" },
        "version": { "const": 1 },
        "subject": {
          "type": "object",
          "required": ["type", "id"],
          "properties": {
            "type": { "const": "alarm" },
            "id": { "type": "string" }
          },
          "additionalProperties": false
        },
        "data": {
          "type": "object",
          "required": ["alarmId", "acknowledgedBy"],
          "properties": {
            "alarmId": { "type": "string" },
            "acknowledgedBy": { "type": "string" },
            "acknowledgedAt": { "type": "string", "format": "date-time" },
            "note": { "type": "string" }
          },
          "additionalProperties": false
        }
      }
    }
  ]
}
