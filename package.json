{
  "name": "freeflow",
  "version": "1.0.0",
  "private": true,
  "description": "FreeFlow monorepo with Next.js and NestJS",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "test:watch": "turbo run test:watch",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "typecheck": "turbo run typecheck",
    "quality": "pnpm run format && pnpm run lint:fix && pnpm run typecheck",
    "quality:check": "pnpm run format:check && pnpm run lint && pnpm run typecheck",
    "clean": "turbo run clean",
    "clean:all": "turbo run clean && rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "infra:up": "cd infra/compose && docker compose up -d",
    "infra:down": "cd infra/compose && docker compose down",
    "infra:restart": "cd infra/compose && docker compose restart",
    "infra:logs": "cd infra/compose && docker compose logs -f",
    "infra:ps": "cd infra/compose && docker compose ps",
    "infra:health": "cd infra/compose && make health",
    "infra:reset": "cd infra/compose && docker compose down -v",
    "infra:camunda": "cd infra/compose && docker compose --profile camunda up -d",
    "infra:formio": "cd infra/compose && docker compose --profile formio up -d",
    "infra:all": "cd infra/compose && docker compose --profile camunda --profile formio up -d",
    "db:postgres": "cd infra/compose && make shell-postgres",
    "db:mongodb": "cd infra/compose && make shell-mongo",
    "db:redis": "cd infra/compose && make shell-redis",
    "db:backup": "cd infra/compose && make backup-postgres && make backup-mongodb",
    "seed": "echo 'Seeding not yet implemented. See docs/dev-setup.md'",
    "prepare": "husky",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.1.0"
}
