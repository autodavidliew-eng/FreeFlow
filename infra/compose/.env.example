# FreeFlow Docker Compose Environment Variables
# Copy this file to .env and update values for your environment

# ==========================================
# PostgreSQL Configuration
# ==========================================
POSTGRES_DB=freeflow
POSTGRES_USER=freeflow
POSTGRES_PASSWORD=freeflow_dev_password

# ==========================================
# MongoDB Configuration
# ==========================================
MONGO_INITDB_ROOT_USERNAME=freeflow
MONGO_INITDB_ROOT_PASSWORD=freeflow_dev_password
MONGO_INITDB_DATABASE=freeflow

# ==========================================
# Redis Configuration
# ==========================================
REDIS_PASSWORD=freeflow_dev_password

# ==========================================
# RabbitMQ Configuration
# ==========================================
RABBITMQ_DEFAULT_USER=freeflow
RABBITMQ_DEFAULT_PASS=freeflow_dev_password
RABBITMQ_DEFAULT_VHOST=/freeflow

# ==========================================
# Keycloak Configuration
# ==========================================
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KC_DB_USERNAME=freeflow
KC_DB_PASSWORD=freeflow_dev_password

# ==========================================
# Form.io Configuration
# ==========================================
FORMIO_JWT_SECRET=freeflow_formio_jwt_secret_change_in_production
FORMIO_DB_SECRET=freeflow_formio_db_secret_change_in_production
FORMIO_ROOT_EMAIL=admin@example.com
FORMIO_ROOT_PASSWORD=admin

# ==========================================
# Camunda Configuration
# ==========================================
CAMUNDA_ZEEBE_LOG_LEVEL=info
CAMUNDA_OPERATE_LOG_LEVEL=info
CAMUNDA_TASKLIST_LOG_LEVEL=info

# ==========================================
# Elasticsearch Configuration
# ==========================================
ELASTIC_PASSWORD=elastic_dev_password
ES_JAVA_OPTS=-Xms512m -Xmx512m

# ==========================================
# Network Configuration
# ==========================================
COMPOSE_PROJECT_NAME=freeflow

# ==========================================
# Development Settings
# ==========================================
# Set to 'true' to enable debug logging
DEBUG_MODE=false

# Set to 'production' for production builds
NODE_ENV=development
